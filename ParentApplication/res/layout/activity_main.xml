<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parentapplication.MainActivity" >

    <Button
        android:id="@+id/btnSendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtVeiwTitle"
        android:layout_marginRight="38dp"
        android:layout_marginTop="26dp"
        android:text="ارسال \nدرخواست \nبه کودک" />

    <Button
        android:id="@+id/btnRecieveRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSendRequest"
        android:layout_alignTop="@+id/btnSendRequest"
        android:layout_toLeftOf="@+id/btnSendRequest"
        android:text="مشاهده\n امتیازات \nکودک" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAddChild"
        android:layout_alignLeft="@+id/btnRecieveRequest"
        android:layout_alignRight="@+id/btnRecieveRequest"
        android:layout_alignTop="@+id/btnAddChild"
        android:onClick="help.xml"
        android:text="راهنما" />

    <TextView
        android:id="@+id/txtVeiwTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="به نام خدا"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnLogOut"
        android:layout_alignLeft="@+id/btnHelp"
        android:layout_alignRight="@+id/btnHelp"
        android:layout_alignTop="@+id/btnLogOut"
        android:text="بستن \nبرنامه" />

    <Button
        android:id="@+id/btnAddChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSendRequest"
        android:layout_alignRight="@+id/btnSendRequest"
        android:layout_below="@+id/btnSendRequest"
        android:text="اضافه کردن\n کودک" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAddChild"
        android:layout_alignRight="@+id/btnAddChild"
        android:layout_below="@+id/btnAddChild"
        android:text="خروج از\n حساب\n کاربری" />

</RelativeLayout>